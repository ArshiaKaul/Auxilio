<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.pooja.auxilio.RecordAudioActivity">

    <Button
        android:id="@+id/tapToRecordBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:text="@string/audio_record"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="65sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/record_progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/check_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/check_icon" />

    <TextView
        android:id="@+id/goto_homescreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="55dp"
        android:text="@string/go_to_homescreen"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

</LinearLayout>
